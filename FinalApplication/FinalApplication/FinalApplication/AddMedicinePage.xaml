<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalApplication.AddMedicinePage"
             Title="Add Medicine">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Medicine Name" PlaceholderColor="Orange" FontSize="16" Margin="20,20"/>
            <Entry Placeholder="Medicine Description" PlaceholderColor="Orange" FontSize="16" Margin="20,20"/>
            <Entry Placeholder="Medicine Image" PlaceholderColor="Orange" FontSize="16" Margin="20,20"/>
            <Button Text="Save" Clicked="Button_Clicked" HeightRequest="50" BackgroundColor="LightGreen" Margin="40,10" FontSize="20"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>